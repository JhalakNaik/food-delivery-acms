<!doctype html>
<html class="no-js" lang="">

<head>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/pixeden-stroke-7-icon@1.2.3/pe-icon-7-stroke/dist/pe-icon-7-stroke.min.css">
    <link rel="stylesheet" href="views/style.css">
    <link href="/css/style.css" rel="stylesheet" type="text/css">

    <style>
        .right-panel {
            background: url(http://www.cockburnevents.com.au/wp-content/uploads/2017/01/foodblur.png);
            margin-left: 280px;
            padding: 30px;
            margin-top: 0px;
        }

        #container {
            overflow: hidden;
            width: 100%;
        }

        #inner {
            overflow: hidden;
        }

        .child {
            float: left;
            margin-left: 30px;
            border-radius: 5px;
            background-color: #fff;
            width: 30%;
            height: 100px;
        }

        .icon-style {
            float: left;
            width: 50%;
            height: 100%;
            padding: 10px;
            font-size: 50px;
            left: 100px;
            top: 20px;

        }

        .icon-style-sub {
            margin-left: 30px;
        }

        .card-text {
            margin-top: 20px;
            font-size: 20px;
            color: #333;
        }

        .card-text-inner {
            font-size: 15px;
            color: #666;
        }

        .flat-color-1 {
            color: #00c292;
        }

        .flat-color-2 {
            color: #ab8ce4;
        }

        .flat-color-3 {
            color: #03a9f3;
        }

        .heading {
            float: left;
            margin-left: 30px;
            border-radius: 5px;
            background-color: #fff;
            width: 90%;
            height: 50px;
            margin-top: 30px;
            padding-left: 30px;
        }

        .card-text-heading {
            font-size: 22px;
            color: #333;
            margin-top: 10px;
        }

        .card-body {
            margin-top: 20px;
            margin-left: 30px;
            background-color: #fff;
        }

        .page-head {
            margin-top: 10px;
            margin-bottom: 20px;
            font-size: 50px;
            text-align: center;
            -webkit-text-fill-color: #fff;

        }

        #popupBoxOnePosition {
            top: 0px;
            margin-left: 280px;
            position: fixed;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            display: none;
        }


        #popupBoxTwoPosition {
            top: 0px;
            left: 280px;
            position: fixed;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            display: none;
        }

        #popupBoxThreePosition {
            top: 0px;
            left: 280px;
            position: fixed;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            display: none;
        }

        .popupBoxWrapper {
            width: 65%;
            margin-top: 120px;
            margin-left: 80px;
            text-align: center;
        }

        .popupBoxContent {
            background-color: #FFF;
            align-items: center;
            padding: 15px;
        }
    </style>

</head>

<body>
    <!-- Left Panel -->

    <!-- /#left-panel -->
    <%- include restaurant-nav.ejs %>
    <!-- Right Panel -->
    <div class="bg-image"></div>
    <div class="right-panel">
        <div id="container">
            <div class="page-head"><%= restaurant_name %></div>
            <div id="inner">
                <div class="child">
                    <div class="icon-style">
                        <div class="icon-style-sub flat-color-1">
                            <i class="pe-7s-like2"></i>
                        </div>
                    </div>
                    <div style="float: left">
                        <div class="card-text">
                            <div><%= total_orders %></div>
                            <div class="card-text-inner">Total Orders</div>
                        </div>
                    </div>
                </div>

                <div class="child">
                    <div class="icon-style">
                        <div class="icon-style-sub flat-color-2">
                            <i class="pe-7s-star"></i>
                        </div>
                    </div>
                    <div style="float: left">
                        <div class="card-text">
                            <div><%= rating %></div>
                            <div class="card-text-inner">Rating</div>
                        </div>
                    </div>
                </div>
                <div class="child">
                    <div class="icon-style">
                        <div class="icon-style-sub flat-color-3">
                            <i class="pe-7s-map-marker"></i>
                        </div>
                    </div>
                    <div style="float: left">
                        <div class="card-text">
                            <div><%= address %></div>
                            <div class="card-text-inner">Location</div>
                        </div>
                    </div>
                </div>
            </div>

            <%if(layout=='home'){%>
            <%- include restaurant-home.ejs %>
            <%}%>
            <%if(layout=='past-orders'){%>
            <%- include past-orders.ejs %>
            <%}%>
            <%if(layout=='edit-items'){%>
            <%- include edit-items.ejs %>
            <%}%>
            <%if(layout=='current-orders'){%>
            <%- include current-orders.ejs %>
            <%}%>
            
        </div>
    </div>
    <!-- /#right-panel -->

</body>

</html>
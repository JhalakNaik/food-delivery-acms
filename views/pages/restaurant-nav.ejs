                                <td><input class="form-control" placeholder="Item Price" type="type" name="itemprice"
                                        id="lngbox" /></td>
                                <td><input class="form-control" placeholder="Item Category" type="type"
                                        name="itemcategory" id="lngbo" /></td>
                                <td><input type="button" class="btn btn-danger" id="delPOIbutton" value="Remove"
                                        onclick="deleteRow(this)" /></td>
                                <td></td>
                            </tr>


                        </table>
                        <td>
                            <input type="button" class="btn btn-success" id="addmorePOIbutton" value="Add More Items"
                                onclick="insRow()" />
                        </td>
                        <td>
                            <input type="submit" onclick="toggle_visibility('popupBoxOnePosition');"
